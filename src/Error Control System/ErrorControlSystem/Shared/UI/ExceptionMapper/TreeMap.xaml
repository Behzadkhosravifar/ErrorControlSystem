<UserControl x:Class="ErrorControlSystem.Shared.UI.ExceptionMapper.TreeMep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TreeView x:Name="ExceptionTree" SelectedItemChanged="ExceptionTree_SelectedItemChanged" FontSize="14" Grid.RowSpan="2" FontFamily="/ErrorControlSystem;component/Fonts/#Simplified Arabic Fixed"/>
        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Cursor="ScrollNS" />
        <RichTextBox x:Name="TxtCodes" VerticalScrollBarVisibility="Auto" Grid.Row="2" FontSize="{Binding CodeFontSize}" FontFamily="/ErrorControlSystem;component/Fonts/#Consolas" IsReadOnly="True" UndoLimit="1" IsReadOnlyCaretVisible="True" SelectionBrush="{Binding Background, ElementName=TxtCodes}"/>
    </Grid>
</UserControl>
