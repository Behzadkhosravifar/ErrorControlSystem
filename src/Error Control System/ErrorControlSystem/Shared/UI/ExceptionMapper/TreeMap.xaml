<UserControl x:Class="ErrorControlSystem.Shared.UI.ExceptionMapper.TreeMep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.75*" />
            <RowDefinition Height="3" />
            <RowDefinition Height="0.25*"/>
        </Grid.RowDefinitions>
        <TreeView Grid.Row="0" x:Name="ExceptionTree" SelectedItemChanged="ExceptionTree_SelectedItemChanged" FontSize="14" FontFamily="/ErrorControlSystem;component/Fonts/#Simplified Arabic Fixed"/>
        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Cursor="ScrollNS" />
        <TextBlock Grid.Row="2" Name="LblAddress" FontFamily="/ErrorControlSystem;component/Fonts/#Simplified Arabic Fixed" FontSize="16"></TextBlock>
        <RichTextBox Grid.Row="3" x:Name="TxtCodes" VerticalScrollBarVisibility="Auto" FontSize="{Binding CodeFontSize}" FontFamily="/ErrorControlSystem;component/Fonts/#Consolas" IsReadOnly="True" UndoLimit="1" IsReadOnlyCaretVisible="True" SelectionBrush="{Binding Background, ElementName=TxtCodes}"/>
    </Grid>
</UserControl>
